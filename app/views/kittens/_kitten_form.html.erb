<%= form_for @kitten do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>

  <%= f.label :age, "Age:" %>
  <%= f.text_field :age %>

  <%= f.label :cuteness, "Cuteness (1-10):" %>
  <%= f.text_field :cuteness %>

  <%= f.label :softness, "Softness (1-10):" %>
  <%= f.text_field :softness %>

  <%= f.submit yield(:button_text) %>
<% end %>
